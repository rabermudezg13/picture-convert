<script>
const state = {
  convert: { files: [], results: [] },
  pdf: { files: [], order: [], orient: 'auto' }
};

let orientResolve = null;
let dragSrc = null;

// ===== TABS =====
function switchTab(tab, btn) {
  document.querySelectorAll('.panel').forEach(p => p.classList.remove('active'));
  document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
  document.getElementById('panel-' + tab).classList.add('active');
  btn.classList.add('active');
}

// ===== DROP ZONES =====
['dropConvert', 'dropPDF'].forEach(id => {
  const el = document.getElementById(id);
  el.addEventListener('dragover', e => { e.preventDefault(); el.classList.add('drag-over'); });
  el.addEventListener('dragleave', () => el.classList.remove('drag-over'));
  el.addEventListener('drop', e => {
    e.preventDefault();
    el.classList.remove('drag-over');
    const mode = id === 'dropConvert' ? 'convert' : 'pdf';
    addFiles(mode, e.dataTransfer.files);
  });
});

function addFiles(mode, fileList) {
  const valid = Array.from(fileList).filter(f =>
    f.type.startsWith('image/') ||
    f.name.toLowerCase().endsWith('.heic') ||
    f.name.toLowerCase().endsWith('.heif')
  );
  if (!valid.length) return;

  if (mode === 'convert') {
    valid.forEach(f => {
      if (!state.convert.files.find(x => x.name === f.name && x.size === f.size))
        state.convert.files.push(f);
    });
    renderConvertGrid();
    updateConvertStatus();
  } else {
    valid.forEach(f => {
      if (!state.pdf.files.find(x => x.name === f.name && x.size === f.size)) {
        state.pdf.files.push(f);
        state.pdf.order.push(state.pdf.files.length - 1);
      }
    });
    renderPDFGrid();
    updatePDFStatus();
  }
}

// ===== CONVERT GRID =====
function renderConvertGrid() {
  const grid = document.getElementById('convertGrid');
  grid.innerHTML = '';
  state.convert.files.forEach((file, i) => {
    const url = isHEIC(file) ? '' : URL.createObjectURL(file);
    const heicBadge = isHEIC(file) ? `<div style="position:absolute;top:5px;left:5px;"><span class="heic-badge">HEIC</span></div>` : '';
    const thumbHtml = isHEIC(file)
      ? `<div class="img-thumb" style="background:var(--surface2);display:flex;align-items:center;justify-content:center;font-size:2rem;">üì∑</div>`
      : `<img class="img-thumb" src="${url}" alt="${file.name}">`;
    const card = document.createElement('div');
    card.className = 'img-card';
    card.innerHTML = `
      ${heicBadge}
      ${thumbHtml}
      <div class="img-info">
        <span class="img-name">${file.name}</span>
        <span class="img-status pending" id="cstatus-${i}">${formatSize(file.size)}</span>
      </div>
      <button class="img-remove" onclick="removeConvert(${i})" title="Remove">‚úï</button>
    `;
    grid.appendChild(card);
  });
}

function removeConvert(i) {
  state.convert.files.splice(i, 1);
  renderConvertGrid();
  updateConvertStatus();
}

function updateConvertStatus() {
  const n = state.convert.files.length;
  const dot = document.getElementById('convertDot');
  const txt = document.getElementById('convertStatusText');
  const btn = document.getElementById('btnConvert');
  if (n === 0) {
    dot.className = 'status-dot';
    txt.textContent = 'No images ‚Äî add files to get started';
    btn.disabled = true;
  } else {
    dot.className = 'status-dot done';
    txt.innerHTML = `<span class="count-badge">${n}</span>&nbsp; image${n !== 1 ? 's' : ''} ready to convert`;
    btn.disabled = false;
  }
}

// ===== CONVERT ENGINE =====
async function convertAll() {
  const files = state.convert.files;
  if (!files.length) return;

  const quality = parseInt(document.getElementById('jpegQuality').value) / 100;
  const bgColor = document.getElementById('bgColor').value;
  const btn = document.getElementById('btnConvert');
  const progress = document.getElementById('convertProgress');
  const fill = document.getElementById('convertFill');
  const results = document.getElementById('convertResults');
  const dot = document.getElementById('convertDot');

  btn.disabled = true;
  btn.textContent = '‚è≥ Processing...';
  progress.classList.add('active');
  results.innerHTML = '';
  dot.className = 'status-dot active';

  const blobs = [];

  for (let i = 0; i < files.length; i++) {
    const file = files[i];
    fill.style.width = ((i / files.length) * 100) + '%';
    const status = document.getElementById('cstatus-' + i);
    if (status) { status.className = 'img-status processing'; status.textContent = 'Converting...'; }
    try {
      const blob = await fileToJPEG(file, quality, bgColor);
      blobs.push({ name: file.name.replace(/\.[^.]+$/, '') + '.jpg', blob });
      if (status) { status.className = 'img-status done'; status.textContent = '‚úì ' + formatSize(blob.size); }
    } catch (e) {
      if (status) { status.className = 'img-status'; status.style.color = '#f87171'; status.textContent = 'Error'; }
    }
  }

  fill.style.width = '100%';
  dot.className = 'status-dot done';

  blobs.forEach(({ name, blob }) => {
    const url = URL.createObjectURL(blob);
    const item = document.createElement('div');
    item.className = 'result-item';
    item.innerHTML = `
      <span class="result-icon">üñº</span>
      <span class="result-name">${name}</span>
      <span class="result-size">${formatSize(blob.size)}</span>
      <a class="btn-dl" href="${url}" download="${name}">‚¨á Download</a>
    `;
    results.appendChild(item);
  });

  if (blobs.length > 1) {
    const allBtn = document.createElement('button');
    allBtn.className = 'btn-primary';
    allBtn.style.marginTop = '0.75rem';
    allBtn.textContent = `‚¨á Download all (${blobs.length} files)`;
    allBtn.onclick = () => blobs.forEach(b => {
      const a = document.createElement('a');
      a.href = URL.createObjectURL(b.blob);
      a.download = b.name;
      a.click();
    });
    results.appendChild(allBtn);
  }

  btn.disabled = false;
  btn.innerHTML = 'üîÑ Convert All to JPEG';
  setTimeout(() => progress.classList.remove('active'), 800);
}

function isHEIC(file) {
  return file.type === 'image/heic' || file.type === 'image/heif' ||
    file.name.toLowerCase().endsWith('.heic') || file.name.toLowerCase().endsWith('.heif');
}

async function fileToJPEG(file, quality, bgColor) {
  // Convert HEIC to a regular blob first
  let sourceFile = file;
  if (isHEIC(file)) {
    try {
      const converted = await heic2any({ blob: file, toType: 'image/jpeg', quality });
      sourceFile = converted instanceof Blob ? converted : converted[0];
    } catch (e) {
      throw new Error('HEIC conversion failed: ' + e.message);
    }
    // HEIC already converted to JPEG ‚Äî wrap it and return
    return sourceFile;
  }

  return new Promise((resolve, reject) => {
    const img = new Image();
    const url = URL.createObjectURL(sourceFile);
    img.onload = () => {
      const canvas = document.createElement('canvas');
      canvas.width = img.naturalWidth;
      canvas.height = img.naturalHeight;
      const ctx = canvas.getContext('2d');
      ctx.fillStyle = bgColor;
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      ctx.drawImage(img, 0, 0);
      URL.revokeObjectURL(url);
      canvas.toBlob(blob => {
        if (blob) resolve(blob);
        else reject(new Error('Conversion failed'));
      }, 'image/jpeg', quality);
    };
    img.onerror = reject;
    img.src = url;
  });
}

// ===== PDF GRID =====
function renderPDFGrid() {
  const grid = document.getElementById('pdfGrid');
  const hint = document.getElementById('dragHint');
  grid.innerHTML = '';
  if (state.pdf.files.length === 0) { hint.style.display = 'none'; return; }
  hint.style.display = 'block';

  state.pdf.order.forEach((fileIdx, orderPos) => {
    const file = state.pdf.files[fileIdx];
    if (!file) return;
    const heicBadge = isHEIC(file) ? `<div style="position:absolute;top:5px;left:32px;"><span class="heic-badge">HEIC</span></div>` : '';
    const thumbHtml = isHEIC(file)
      ? `<div class="img-thumb" style="background:var(--surface2);display:flex;align-items:center;justify-content:center;font-size:2rem;">üì∑</div>`
      : `<img class="img-thumb" src="${URL.createObjectURL(file)}" alt="${file.name}">`;
    const card = document.createElement('div');
    card.className = 'img-card';
    card.draggable = true;
    card.dataset.idx = fileIdx;
    card.dataset.pos = orderPos;
    card.innerHTML = `
      <div style="position:absolute;top:5px;left:5px;background:rgba(0,0,0,0.6);color:var(--accent);font-family:'Space Mono',monospace;font-size:0.65rem;padding:2px 6px;border-radius:4px;font-weight:700;">${orderPos + 1}</div>
      ${heicBadge}
      ${thumbHtml}
      <div class="img-info">
        <span class="img-name">${file.name}</span>
        <span class="img-status pending">${formatSize(file.size)}</span>
      </div>
      <button class="img-remove" onclick="removePDF(${fileIdx})" title="Remove">‚úï</button>
    `;

    card.addEventListener('dragstart', e => { dragSrc = card; card.classList.add('dragging'); e.dataTransfer.effectAllowed = 'move'; });
    card.addEventListener('dragend', () => card.classList.remove('dragging'));
    card.addEventListener('dragover', e => { e.preventDefault(); card.classList.add('drag-target'); });
    card.addEventListener('dragleave', () => card.classList.remove('drag-target'));
    card.addEventListener('drop', e => {
      e.preventDefault();
      card.classList.remove('drag-target');
      if (dragSrc && dragSrc !== card) {
        const fromPos = parseInt(dragSrc.dataset.pos);
        const toPos = parseInt(card.dataset.pos);
        const tmp = state.pdf.order[fromPos];
        state.pdf.order[fromPos] = state.pdf.order[toPos];
        state.pdf.order[toPos] = tmp;
        renderPDFGrid();
      }
    });

    grid.appendChild(card);
  });
}

function removePDF(fileIdx) {
  state.pdf.order = state.pdf.order.filter(i => i !== fileIdx);
  renderPDFGrid();
  updatePDFStatus();
}

function updatePDFStatus() {
  const n = state.pdf.order.length;
  const dot = document.getElementById('pdfDot');
  const txt = document.getElementById('pdfStatusText');
  const btn = document.getElementById('btnPDF');
  if (n === 0) {
    dot.className = 'status-dot';
    txt.textContent = 'No images ‚Äî add files to get started';
    btn.disabled = true;
  } else {
    dot.className = 'status-dot done';
    txt.innerHTML = `<span class="count-badge">${n}</span>&nbsp; page${n !== 1 ? 's' : ''} ready to merge`;
    btn.disabled = false;
  }
}

function setOrient(val) {
  state.pdf.orient = val;
  document.querySelectorAll('.orient-opt').forEach(el => el.classList.remove('selected'));
  document.getElementById('opt-' + val)?.classList.add('selected');
}

// ===== PDF ENGINE =====
async function generatePDF() {
  const { jsPDF } = window.jspdf;
  const files = state.pdf.files;
  const order = state.pdf.order;
  if (!order.length) return;

  const pageSize = document.getElementById('pageSize').value;
  const fitPage = document.getElementById('fitPage').checked;
  const btn = document.getElementById('btnPDF');
  const progress = document.getElementById('pdfProgress');
  const fill = document.getElementById('pdfFill');
  const results = document.getElementById('pdfResults');
  const dot = document.getElementById('pdfDot');

  btn.disabled = true;
  btn.textContent = '‚è≥ Building PDF...';
  progress.classList.add('active');
  results.innerHTML = '';
  dot.className = 'status-dot active';

  const images = [];
  for (let i = 0; i < order.length; i++) {
    fill.style.width = ((i / order.length) * 50) + '%';
    const file = files[order[i]];
    const imgData = await loadImageData(file);
    images.push(imgData);
  }

  const orientations = [];
  const mode = state.pdf.orient;

  if (mode === 'ask') {
    for (let i = 0; i < images.length; i++) {
      const img = images[i];
      document.getElementById('modalImageName').textContent = `Image ${i + 1} of ${images.length}: ${files[order[i]].name}`;
      const answer = await askOrientation();
      let o = answer;
      if (o === 'auto') o = img.width >= img.height ? 'landscape' : 'portrait';
      orientations.push(o);
    }
  } else {
    images.forEach(img => {
      let o = mode;
      if (o === 'auto') o = img.width >= img.height ? 'landscape' : 'portrait';
      orientations.push(o);
    });
  }

  const firstOrient = orientations[0] || 'portrait';
  const pdf = new jsPDF({ orientation: firstOrient, unit: 'mm', format: pageSize });

  for (let i = 0; i < images.length; i++) {
    fill.style.width = (50 + (i / images.length) * 50) + '%';
    if (i > 0) pdf.addPage(pageSize, orientations[i]);

    const { dataUrl, width: imgW, height: imgH } = images[i];
    const pageW = pdf.internal.pageSize.getWidth();
    const pageH = pdf.internal.pageSize.getHeight();

    let drawW, drawH, x, y;
    if (fitPage) {
      const ratio = Math.min(pageW / imgW, pageH / imgH);
      drawW = imgW * ratio;
      drawH = imgH * ratio;
      x = (pageW - drawW) / 2;
      y = (pageH - drawH) / 2;
    } else {
      drawW = Math.min(imgW * 0.2645833, pageW);
      drawH = Math.min(imgH * 0.2645833, pageH);
      x = (pageW - drawW) / 2;
      y = (pageH - drawH) / 2;
    }

    pdf.addImage(dataUrl, 'JPEG', x, y, drawW, drawH);
  }

  fill.style.width = '100%';
  dot.className = 'status-dot done';

  const pdfBlob = pdf.output('blob');
  const pdfUrl = URL.createObjectURL(pdfBlob);
  const filename = `ImageForge_${new Date().toISOString().slice(0,10)}.pdf`;

  const item = document.createElement('div');
  item.className = 'result-item';
  item.innerHTML = `
    <span class="result-icon">üìÑ</span>
    <span class="result-name">${filename}</span>
    <span class="result-size">${images.length} page${images.length !== 1 ? 's' : ''} ¬∑ ${formatSize(pdfBlob.size)}</span>
    <a class="btn-dl" href="${pdfUrl}" download="${filename}">‚¨á Download</a>
  `;
  results.appendChild(item);

  btn.disabled = false;
  btn.innerHTML = 'üìÑ Generate PDF';
  setTimeout(() => progress.classList.remove('active'), 800);
}

async function loadImageData(file) {
  let sourceFile = file;
  if (isHEIC(file)) {
    try {
      const converted = await heic2any({ blob: file, toType: 'image/jpeg', quality: 0.95 });
      sourceFile = converted instanceof Blob ? converted : converted[0];
    } catch (e) {
      throw new Error('HEIC conversion failed');
    }
  }

  return new Promise((resolve, reject) => {
    const img = new Image();
    const url = URL.createObjectURL(sourceFile);
    img.onload = () => {
      const canvas = document.createElement('canvas');
      canvas.width = img.naturalWidth;
      canvas.height = img.naturalHeight;
      const ctx = canvas.getContext('2d');
      ctx.fillStyle = '#ffffff';
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      ctx.drawImage(img, 0, 0);
      URL.revokeObjectURL(url);
      resolve({ dataUrl: canvas.toDataURL('image/jpeg', 0.95), width: img.naturalWidth, height: img.naturalHeight });
    };
    img.onerror = reject;
    img.src = url;
  });
}

function askOrientation() {
  return new Promise(resolve => {
    orientResolve = resolve;
    document.getElementById('orientModal').classList.add('active');
  });
}

function resolveOrient(val) {
  document.getElementById('orientModal').classList.remove('active');
  if (orientResolve) { orientResolve(val); orientResolve = null; }
}

function formatSize(bytes) {
  if (bytes < 1024) return bytes + ' B';
  if (bytes < 1048576) return (bytes / 1024).toFixed(1) + ' KB';
  return (bytes / 1048576).toFixed(2) + ' MB';
}
